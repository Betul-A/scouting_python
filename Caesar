maxShift = 26

def choice():
    while True:
        prompt = input("Press 1 to encrypt a message and press 2 to decrypt a message. ")
        if prompt == "1":
            encrypt()
            break
        elif prompt == "2":
            decrypt()
            break
        print("Error. Invalid selection.")


def encrypt():
    plaintxt = input("What is your choice of plaintext? ")
    shift = int(input("What is your shift number? "))
    ciphertxt = ""

    for char in plaintxt:
        x = ord(char)
        char = char.lower()
        x += shift
        if x >= 123:
            x = x - 26
        y = chr(x)
        ciphertxt += y

    print(ciphertxt)


def decrypt():
    ciphertxt = input("What is your choice of ciphertext? ")
    shift = int(input("What is your shift number? "))
    plaintxt = ""

    for char in ciphertxt:
        x = ord(char)
        x = x - shift
        y = chr(x)
        plaintxt += y

    print(plaintxt)


choice()